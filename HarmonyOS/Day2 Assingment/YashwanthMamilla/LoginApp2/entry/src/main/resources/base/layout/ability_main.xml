<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Component
        ohos:height="150vp"
        ohos:width="match_parent"/>
    <Image
        ohos:height="150vp"
        ohos:width="150vp"
        ohos:id="$+id:imageview"
        ohos:layout_alignment="horizontal_center"
        ohos:image_src="$media:my_app"
        />
    <Component
        ohos:height="60fp"
        ohos:width="match_parent"/>
    <Button
        ohos:height="match_content"
        ohos:width="150vp"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:login"
        ohos:top_margin="$float:main_page_login_top_margin"
        ohos:text_size="$float:main_page_text_size"
        ohos:top_padding="$float:main_page_field_padding"
        ohos:bottom_padding="$float:main_page_field_padding"
        ohos:text_color="$ohos:color:id_color_activated_end_transparent"
        ohos:background_element="$graphic:button_background"
        ohos:text_font="sans-serif"
        ohos:id="$+id:login"/>
        />

    <Button
        ohos:height="match_content"
        ohos:width="150vp"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:signup"
        ohos:top_margin="$float:main_page_login_top_margin"
        ohos:text_size="$float:main_page_text_size"
        ohos:top_padding="$float:main_page_field_padding"
        ohos:bottom_padding="$float:main_page_field_padding"
        ohos:text_color="$ohos:color:id_color_activated_end_transparent"
        ohos:background_element="$graphic:button_background"
        ohos:text_font="sans-serif"
        ohos:id="$+id:signup_button"/>

</DirectionalLayout>